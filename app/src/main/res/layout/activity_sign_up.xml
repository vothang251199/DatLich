<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign_up">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="54dp"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="221dp"
            android:text="SigUp Now"
            android:textColor="#7F45D1"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="98dp"
            android:layout_marginTop="66dp"
            android:layout_marginEnd="82dp"
            android:src="@drawable/calendar_logo"
            android:transitionName="logo_image" />

        <TextView
            android:id="@+id/logo_name"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_logo"
            android:layout_centerInParent="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:text="Enter your information to register for an account"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />
        <RelativeLayout
            android:id="@+id/lt_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo_name"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">
            <EditText
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:padding="15dp"
                android:hint="Last name"
                android:drawableStart="@drawable/people"
                android:drawablePadding="15dp"
                android:background="@drawable/boder_text_signup"/>
            <EditText
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/last_name"
                android:inputType="text"
                android:padding="15dp"
                android:hint="First name"
                android:drawableStart="@drawable/people"
                android:drawablePadding="15dp"
                android:background="@drawable/boder_text_signup"/>
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/first_name"
                android:inputType="text"
                android:padding="15dp"
                android:hint="Email"
                android:drawableStart="@drawable/email"
                android:drawablePadding="15dp"
                android:background="@drawable/boder_text_signup"/>
            <EditText
                android:id="@+id/usename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/email"
                android:inputType="text"
                android:padding="15dp"
                android:hint="Usename"
                android:drawableStart="@drawable/usename"
                android:drawablePadding="15dp"
                android:background="@drawable/boder_text_signup"/>
            <EditText
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/usename"
                android:inputType="text"
                android:padding="15dp"
                android:hint="Password"
                android:drawableStart="@drawable/lock"
                android:drawablePadding="15dp"
                android:background="@drawable/boder_text_signup"/>
        </RelativeLayout>
        <Button
            android:id="@+id/bt_submit"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/lt_signup"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"
            android:text="Submit"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#34403F"
            android:background="@drawable/boder_button"/>
        <LinearLayout
            android:id="@+id/lt_have_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_submit"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_centerInParent="true"
            android:layout_marginEnd="35dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Youu already have an account?"
                android:textStyle="bold"
                android:textColor="#121112"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/txt_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginStart="10dp"
                android:textSize="16sp"/>
        </LinearLayout>
        <View
            android:layout_width="150dp"
            android:layout_height="5dp"
            android:layout_below="@+id/lt_have_account"
            android:layout_centerInParent="true"
            android:background="#1F2020"
            android:layout_marginTop="20dp"
            />
    </RelativeLayout>

</LinearLayout>