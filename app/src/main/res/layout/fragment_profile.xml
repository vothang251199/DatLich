<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/lt_pr1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:background="#53B657">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:text="Settings"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:text="Layout"
                android:textColor="#FFFFFF"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="39dp"
                android:layout_marginEnd="154dp"
                android:layout_centerInParent="true"
                android:text="Profile"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/lt_pr2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lt_pr1">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="131dp"
                android:layout_marginTop="52dp"
                android:text="Võ Văn Thắng"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/lt_pr2_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_name">
                <ImageView
                    android:id="@+id/img_name1"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/usename" />

                <TextView
                    android:id="@+id/txt_gioitinh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="268dp"
                    android:layout_toEndOf="@+id/img_name1"
                    android:text="Giới tính" />

                <TextView
                    android:id="@+id/txt_gioitinh1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_gioitinh"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="9dp"
                    android:layout_toEndOf="@+id/img_name1"
                    android:text="Nam"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <View
                    android:layout_below="@+id/txt_gioitinh1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/colorAccent"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/lt_pr2_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lt_pr2_1">
                <ImageView
                    android:id="@+id/img_name2"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/usename" />

                <TextView
                    android:id="@+id/txt_ngsinh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="18dp"
                    android:layout_toEndOf="@+id/img_name2"
                    android:text="Ngày sinh" />

                <TextView
                    android:id="@+id/txt_ngsinh1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_ngsinh"
                    android:layout_marginTop="5dp"
                    android:text="Nam"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_toEndOf="@+id/img_name2"
                    android:layout_marginStart="20dp"/>
                <View
                    android:layout_below="@+id/txt_ngsinh1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/colorAccent"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/lt_pr2_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lt_pr2_2">
                <ImageView
                    android:id="@+id/img_name3"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/usename" />

                <TextView
                    android:id="@+id/txt_quequan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="18dp"
                    android:layout_toEndOf="@+id/img_name3"
                    android:text="Quê quán" />

                <TextView
                    android:id="@+id/txt_quequan1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_quequan"
                    android:layout_marginTop="5dp"
                    android:text="Nam"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_toEndOf="@+id/img_name3"
                    android:layout_marginStart="20dp"/>
                <View
                    android:layout_below="@+id/txt_quequan1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/colorAccent"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/lt_pr2_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lt_pr2_3">
                <ImageView
                    android:id="@+id/img_name4"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/usename" />

                <TextView
                    android:id="@+id/txt_thich"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="18dp"
                    android:layout_toEndOf="@+id/img_name4"
                    android:text="Sở thích" />

                <TextView
                    android:id="@+id/txt_thich1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_thich"
                    android:layout_marginTop="5dp"
                    android:text="Nam"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_toEndOf="@+id/img_name4"
                    android:layout_marginStart="20dp"/>
                <View
                    android:layout_below="@+id/txt_thich1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/colorAccent"/>

            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lt_pr_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/cho"
            android:padding="3dp"
            android:background="@drawable/circle"/>
    </RelativeLayout>



</RelativeLayout>
